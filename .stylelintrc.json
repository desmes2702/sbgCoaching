{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-tailwindcss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "apply",
        "variants",
        "responsive",
        "screen",
        "layer",
        "forward",
        "use",
        "include",
        "mixin",
        "if",
        "else",
        "for"
      ]
    }],
    "scss/at-rule-no-unknown": null,
    "no-invalid-double-slash-comments": null,
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "function-no-unknown": null,
    "scss/no-global-function-names": null,
    "keyframes-name-pattern": null,
    "max-nesting-depth": null,
    "no-descending-specificity": null,
    "order/properties-order": [
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",
      "display",
      "flex",
      "grid",
      "place-items",
      "align-items",
      "justify-content",
      "width",
      "height",
      "min-width",
      "min-height",
      "max-width",
      "max-height",
      "padding",
      "margin",
      "gap",
      "border",
      "border-radius",
      "box-shadow",
      "background",
      "background-color",
      "color",
      "font",
      "font-size",
      "font-weight",
      "line-height",
      "text-align",
      "text-transform",
      "letter-spacing",
      "transition",
      "animation",
      "transform",
      "opacity",
      "overflow",
      "cursor",
      "visibility"
    ]
  }
}
