{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",                    // ‚Üê corrige "preserve"
    "jsxImportSource": "react",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@scss/*": ["scss/*"],
      "@partials/*": ["partials/*"],
      "@layouts/*": ["layouts/*"],
      "@perf/*": ["partials/components/perf/*"]
    },
    "types": ["node", "astro/client"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src", "src/env.d.ts"],
  "exclude": ["dist", "node_modules"]
}
