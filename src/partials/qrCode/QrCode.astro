---
import QRCode from 'https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/dist/qrcode.min.js';
import { Head, Link, Meta } from '@astrojs/client';

const qrCode = new QRCode(document.getElementById('qr-code'));

function gtag() {
  dataLayer.push(arguments);
}
gtag('js', new Date());
gtag('config', 'GA_MEASUREMENT_ID');

const socialLinks = [
  {
    label: 'Facebook',
    url: 'https://www.facebook.com/samuelbillagarciacoaching',
    icon: 'icon__facebook.svg',
  },
  {
    label: 'Instagram',
    url: 'https://www.instagram.com/sambillagarcia/',
    icon: 'icon__insta.svg',
  },
];

const buttons = [
  {
    label: 'Formulaire d\'avis client',
    url: 'https://forms.gle/xdvpy6ApUQ9DPd658',
  },
  {
    label: 'Avis Google',
    url: 'https://g.page/r/Ca_giJmyvhbZEAE/review',
  },
];

const contactInfo = [
  {
    type: 'mail',
    value: 'info@sbg.be',
  },
  {
    type: 'call',
    value: '0494 20 50 75',
  },
  {
    type: 'location',
    value: 'Route de Yernée 264, 4480 Engis',
  },
];
---
<style lang="scss">
@use "@scss/components/qrCode";
</style>



<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>SBG Coaching</title>
  <link href="https:/../fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/qrCode__style.css" />
</head>

<body>
  <div class="page">
    <!-- Header -->
    <header class="header">
      <img src="/logo.svg" alt="Logo SBG" class="header__logo" />
      <h1>SBG Coaching</h1>
      <h2 class="header__slogan">“ Le seul mauvais entraînement est celui que l'on ne fait pas ! ”</h2>
    </header>

    <!-- Social Links -->
    <div class="social-links">
      {# socialLinks.map((link, index) => (
        <a
          key={index}
          href={link.url}
          class="social-links__link"
          aria-label={link.label}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src={`/icons/${link.icon}`} alt={link.label} />
        </a>
      )) #}
    </div>

    <!-- Buttons -->
    <div class="buttons">
      {# buttons.map((button, index) => (
        <Link
          key={index}
          href={button.url}
          class={`buttons__button ${button.label === 'Formulaire d\'avis client' ? 'buttons__button--secondary' : ''}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          {button.label}
        </Link>
      )) #}
    </div>

    <!-- Contact Info -->
    <div class="contact">
      <p class="contact__intro">Pour toutes informations, voici les coordonnées de SBG Coaching :</p>
      <ul>
        {# contactInfo.map((info, index) => (
          <li key={index} class={`contact__item ${info.type === 'mail' ? 'contact__mail' : ''}`}>
            {info.type === 'mail'
              ? <a href={`mailto:${info.value}`} class="contact__link">{info.value}</a>
              : info.type === 'call'
                ? info.value
                : info.value}
          </li>
        )) #}
      </ul>
    </div>

    <!-- Map -->
    <div class="contact__map">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2535.447894064328!2d5.338040776833654!3d50.544440180591536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c1aabcf7c0482d%3A0xf7bb9c0d8fdde17c!2sRte%20de%20Yern%C3%A9e%20264%2C%204480%20Engis%2C%20Belgique!5e0!3m2!1sfr!2sfr!4v1737715092033!5m2!1sfr!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- QR Code -->
    <div id="qr-code"></div>
  </div>
</body>
</html>
